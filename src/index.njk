<div class="container" id="background">
  <div class="container-name">
    Background
  </div>
  <div class="background-text">
    "Greetings! I'm a passionate Game Programmer … my toolkit evolves to meet new challenges."

    <br /><br />

    "Alongside this coding odyssey … my musical journey on Instagram and YouTube."
  </div>
</div>

<div class="container" id="projects">
  <div class="container-name">Projects</div>

  <div class="project-card-row">
    {% for project in projects %}
    <div class="project-card" id="project-{{ project.id }}">
      <a href="{{ project.image }}" target="_blank">
        <div class="project-card-image-container">
          <img
            src="{{ project.image }}"
            alt="{{ project.title }} cover"
            class="project-card-image"
          />
          <div class="project-name-container">
            <div class="project-name-bg"></div>
            <div class="project-name">{{ project.title }}</div>
          </div>
        </div>
      </a>

      <div class="project-card-description-container">
        <div class="project-technology">
          <ul>
            {% for tech in project.technologies %}
            <li>{{ tech }}</li>
            {% endfor %}
          </ul>
        </div>
        <div class="project-card-description">
          {{ project.description }}
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>


