{% set cfg = experience %}
<div class="experience-section">
  <h2>Professional Experience</h2>

  <div 
    class="experience-cards"
    style="--exp-card-width: {{ cfg.cardWidth }}; --exp-card-height: {{ cfg.cardHeight }};"
  >
    {% for exp in cfg.items %}
      <div class="exp-card">
        <h3>{{ exp.company }}</h3>
        <p class="exp-role">{{ exp.designation }}</p>
        <span class="exp-duration">{{ exp.start }} – {{ exp.end }}</span>
      </div>
    {% endfor %}
  </div>
</div>
